{
    "version": 3,
    "configurePresets": [
        {
            "name": "ninja-multi-vcpkg",
            "displayName": "Ninja Multi-Config",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configuration. Starts in Game.",
            "binaryDir": "${sourceDir}/Build/${presetName}",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "ninja-multi-vcpkg-editor",
            "inherits": "ninja-multi-vcpkg",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configuration. Starts in Editor.",
            "cacheVariables": { "DIVIDE_STARTUP_TYPE": "IN_EDITOR" }
        }
    ],
    "buildPresets":[
        {
            "name": "editor-x64-release",
            "displayName": "Editor-Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "configurePreset": "ninja-multi-vcpkg-editor",
            "configuration": "Release"
        },
        {
            "name": "game-x64-release",
            "displayName": "Game-Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "configurePreset": "ninja-multi-vcpkg",
            "configuration": "Release"
        },
        {
            "name": "editor-x64-profile",
            "displayName": "Editor-Profile",
            "description": "Target Windows (64-bit) with the Visual Studio development environment with debug symbols",
            "configurePreset": "ninja-multi-vcpkg-editor",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "game-x64-profile",
            "displayName": "Game-Profile",
            "description": "Target Windows (64-bit) with the Visual Studio development environment with debug symbols",
            "configurePreset": "ninja-multi-vcpkg",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "editor-x64-debug",
            "displayName": "Editor-Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. Debug build.",
            "configurePreset": "ninja-multi-vcpkg-editor",
            "configuration": "Debug"
        },
        {
            "name": "game-x64-debug",
            "displayName": "Game-Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. Debug build.",
            "configurePreset": "ninja-multi-vcpkg",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "test-ninja-vcpkg-editor",
            "configurePreset": "ninja-multi-vcpkg-editor",
            "hidden": true
        },
        {
            "name": "test-ninja-vcpkg-game",
            "configurePreset": "ninja-multi-vcpkg",
            "hidden": true
        },
        {
            "name": "test-debug-game",
            "description": "Test (Game Debug)",
            "displayName": "Test (Game Debug)",
            "configuration": "Debug",
            "inherits": [
                "test-ninja-vcpkg-game"
            ]
        },
        {
            "name": "test-debug-editor",
            "description": "Test (Editor Debug)",
            "displayName": "Test (Editor Debug)",
            "configuration": "Debug",
            "inherits": [
                "test-ninja-vcpkg-editor"
            ]
        },
        {
            "name": "test-release-game",
            "description": "Test (Game Release)",
            "displayName": "Test (Game Release)",
            "configuration": "Release",
            "inherits": [
                "test-ninja-vcpkg-game"
            ]
        },
        {
            "name": "test-release-editor",
            "description": "Test (Editor Release)",
            "displayName": "Test (Editor Release)",
            "configuration": "Release",
            "inherits": [
                "test-ninja-vcpkg-editor"
            ]
        }
    ]
}