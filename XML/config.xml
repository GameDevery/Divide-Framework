<?xml version="1.0" encoding="utf-8"?>
<!-- DEBUG: General purpose settings needed while the application is loading -->
<debug>
	<!-- if this is not set to -1, then all command buffers used in that frame number will be dumped to the error log for inspection -->
	<!-- requires a build with ENABLE_GPU_VALIDATION set-->
	<dumpCommandBuffersOnFrame>-1</dumpCommandBuffersOnFrame>
	<enableRenderAPIDebugging>true</enableRenderAPIDebugging>
	<enableDebugMsgGroups>true</enableDebugMsgGroups>
	<useGeometryCache>true</useGeometryCache>
	<useVegetationCache>true</useVegetationCache>
	<enableTreeInstances>false</enableTreeInstances>
	<enableGrassInstances>true</enableGrassInstances>
	<!-- this is only taken into consideration if binary cache is disabled-->
	<useShaderTextCache>false</useShaderTextCache>
	<useShaderBinaryCache>false</useShaderBinaryCache>
	<!-- memFile: file name that the application should use to write  memory allocation info. Leave empty for none! -->
	<memFile>mem.log</memFile>
</debug>

<language>enGB</language>

<!-- RUNTIME: Values use by the application after loading is complete -->
<runtime>
	<!-- 0 = primary display, 1 = secondary display, etc. Value is clamped between [1, LAST_DISPLAY] -->
	<targetDisplay>0</targetDisplay>
	<!-- 0 = NULL, 1 - OpenGL4, 2 - GLES3, 3 - Vulkan-->
	<targetRenderingAPI>1</targetRenderingAPI>
	<!-- Fixed time step on/off as described here: https://gafferongames.com/post/fix_your_timestep/ -->
	<useFixedTimestep>true</useFixedTimestep>
	<!-- The maximum number of worker threads that we want to spawn. -1 = (CPU thread count - 1). We will always spawn a minimum of 5 threads-->
	<maxWorkerThreads>16</maxWorkerThreads>
	<!-- 0 = windowed, 1 = borderless window, 2 = fullscreen (has some issues)-->
	<windowedMode>0</windowedMode>
	<!-- do we allow window resizing if running in windowed mode? -->
	<windowResizable>true</windowResizable>
    <!-- start maximized or use the provided window dimensions? -->
    <maximizeOnStart>true</maximizeOnStart>
    <!-- cap framerate. Set to 0 or less to disable -->
	<frameRateLimit>0</frameRateLimit>
	<!-- toggle Vsync on or off. This can be overridden by the display driver! -->
	<enableVSync>false</enableVSync>
	<!-- try to enable late v-swap. Only works with VSync. May fallback to regular vsync-->
	<adaptiveSync>true</adaptiveSync>
	<!-- splash screen dimensions -->
	<splashScreenSize width="400" height="300"/>
	<!-- window size. Only for windowed mode! -->
	<windowSize width="1280" height="720"/>
	<!-- rendering resolution -->
	<resolution width="1920" height="1080"/>
	<!-- Physics simulation speed multiplier. Tweak this for faster or slower simulations (ex: slow motion explosions)-->
	<simSpeed>0</simSpeed>
	<zNear>0.25</zNear>
	<zFar>500</zFar>
	<verticalFOV>60</verticalFOV>
</runtime>
<GUI>
	<CEGUI>
		<Enabled>true</Enabled>
		<SkipRendering>false</SkipRendering>
		<defaultGUIScheme>GWEN</defaultGUIScheme>
	</CEGUI>
	<IMGUI>
		<multiViewportEnabled>true</multiViewportEnabled>
		<windowDecorationsEnabled>false</windowDecorationsEnabled>
		<dontMergeFloatingWindows>true</dontMergeFloatingWindows>
	</IMGUI>
	<consoleLayoutFile>console.layout</consoleLayoutFile>
</GUI>
<rendering>
	<MSAAsamples>4</MSAAsamples>
	<anisotropicFilteringLevel>8</anisotropicFilteringLevel>
	<!-- base reflectio resolution is 512p. Min factor 1. (e.g. factor 2 = 1024p targets) -->
	<reflectionResolutionFactor>1</reflectionResolutionFactor>
	<!-- higher => better (less tilling, more parallax effects, etc) -->
	<terrainDetailLevel>2</terrainDetailLevel>
	<!-- 0 - low, 1 - med, 2 - high -->
	<terrainTextureQuality>0</terrainTextureQuality>
	<numLightsPerScreenTile>512</numLightsPerScreenTile>
	<!-- 0 - 8x8, 1 - 16x16, 2 - 32x32 -->
	<lightThreadGroupSize>1</lightThreadGroupSize>
	<enableFog>true</enableFog>
	<fogDensity>0.00100000005</fogDensity>
	<fogColour r="0.5" g="0.5" b="0.550000012"/>
	<lodThresholds x="25" y="45" z="85" w="165"/>
	<postFX>
		<!-- Select the type of post processing AA: FXAA or SMAA -->
		<!-- Defaults to FXAA -->
		<PostAAType>FXAA</PostAAType>
		<!-- Quality level for FXAA or SMAA: 0 - off, 1 - lowest, 5 - highest-->
		<PostAAQualityLevel>2</PostAAQualityLevel>
		<enableDepthOfField>false</enableDepthOfField>
		<enableBloom>true</enableBloom>
		<bloomFactor>0.800000012</bloomFactor>
		<enableSSAO>true</enableSSAO>
		<ssaoRadius>0.5</ssaoRadius>
		<ssaoPower>2</ssaoPower>
	</postFX>
	<shadowMapping>
		<enabled>true</enabled>
		<!-- Will be rounded up to the next POW_2. Cube/Dual paraboloid will be 1/2 resolution per face/slice -->
		<shadowMapResolution>1024</shadowMapResolution>
		<MSAAsamples>4</MSAAsamples>
		<anisotropicFilteringLevel>8</anisotropicFilteringLevel>
		<enableBlurring>true</enableBlurring>
		<defaultCSMSplitCount>3</defaultCSMSplitCount>
		<!-- Unused at the moment -->
		<softness>0.5</softness>
		<splitLambda>0.899999976</splitLambda>
	</shadowMapping>
</rendering>
<title>DIVIDE Framework - (C) Ionut Cava 2020</title>
<defaultTextureLocation>textures</defaultTextureLocation>
<defaultShadersLocation>shaders</defaultShadersLocation>
