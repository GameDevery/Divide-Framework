<!-- DEBUG: General purpose settings needed while the application is loading -->
<debug>
  <useShaderTextCache>true</useShaderTextCache>
  <!-- memFile: file name that the application should use to write  memory allocation info -->
  <!-- leave empty for none! -->
  <memFile>mem.log</memFile>
  <mesh>
    <playAnimations>true</playAnimations>
  </mesh>
</debug>

<language>enGB</language>

<!-- RUNTIME: Values use by the application after loading is complete -->
<runtime>
  <!-- 0 = primary display, 1 = secondary display, etc. Value is clamped between [1, LAST_DISPLAY] -->
  <targetDisplay>0</targetDisplay>
  <!-- set to true to start the application in windowed mode -->
  <windowedMode>true</windowedMode>
  <windowResizable>false</windowResizable>
  <!-- toggle Vsync on or off. This can be overridden by the display driver! -->
  <enableVSync>false</enableVSync>
  <!-- splash screen dimensions -->
  <splashScreenSize w="400" h="300"/>
  <!-- rendering resolution -->
  <resolution w="1280" h="720" />
  <!-- Physics simulation speed multiplier. Tweak this for faster or slower simulations (ex: slow motion explosions)-->
  <simSpeed>0.0</simSpeed>
  <zNear>0.25</zNear>
  <zFar>500.0</zFar>
  <verticalFOV>60</verticalFOV>
</runtime>

<GUI>
  <CEGUI>
    <Enabled>true</Enabled>
    <ExtraStates>false</ExtraStates>
    <SkipRendering>true</SkipRendering>
    <defaultGUIScheme>GWEN</defaultGUIScheme>
  </CEGUI>
  <enableDebugVariableControls>false</enableDebugVariableControls>
  <consoleLayoutFile>console.layout</consoleLayoutFile>
  <editorLayoutFile>editor.layout</editorLayoutFile>
</GUI>

<rendering>
  <!-- Select the type of post processing AA: FXAA or SMAA -->
  <!-- Defaults to FXAA -->
  <PostAAType>FXAA</PostAAType>
  <PostAASamples>0</PostAASamples>
  <MSAAsamples>0</MSAAsamples>
  <anisotropicFilteringLevel>8</anisotropicFilteringLevel>
  <!-- detail level: off = 0, low = 1 (no blurring, 512x512 base resolution), medium = 2 (blurring, 512x512 base resolution) -->
  <!--               high = 3 (blurring, 1024x1024 base resolution), ultra = 4 (blurring, 2048x2048 base resolution) -->
  <shadowDetailLevel>0</shadowDetailLevel>
  <renderDetailLevel>4</renderDetailLevel>
  <enableFog>true</enableFog>
  <fogDensity>3</fogDensity>
  <fogColour r="0.5" g="0.5" b="0.55"/>
  <enable3D>false</enable3D>
  <anaglyphOffset>0.16</anaglyphOffset>
  <enableDepthOfField>false</enableDepthOfField>
  <enableBloom>false</enableBloom>
  <bloomFactor>0.8</bloomFactor>
  <enableSSAO>false</enableSSAO>
</rendering>  

<title>DIVIDE Framework - (C) Ionut Cava 2017</title>
<defaultTextureLocation>textures</defaultTextureLocation>
<defaultShadersLocation>shaders</defaultShadersLocation>